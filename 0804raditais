def trenet_kajas(pietupieni, vienas_kajas_pietupieni):
    print('----------------------------------')
    print('Tavs 코odienas treni켽코:')
    print(f'Pietupienu skaits: {pietupieni*0.75+5}')
    print(f'Vienas k캐jas pietupienu skaits: {vienas_kajas_pietupieni*0.75+1}')
    print('----------------------------------')
def trenet_kruskurvi(atspiesanas,dimanta_atspiesanas):
    print('----------------------------------')
    print("Tavs 코odiens treni켽코: ")
    print(f'atspie코an캐s skaits: {atspiesanas*0.75+1}')
    print(f'dimanta atspie코an캐s skaits: {dimanta_atspiesanas*0.75+1}')
    print('----------------------------------')
def trenet_muguru(pievilksanas, muscle_up):
    print('----------------------------------')
    print('Tavs 코odienas treni켽코:')
    print(f"Pievilk코an캐s skaits: {pievilksanas*0.75+1}")
    print(f"Muscle up skaits: {muscle_up*0.75+1}")
    print('----------------------------------')
def trenet_presiti(sedus_augsa,planks):
    print('Tavs 코odienas treni켽코:')
    print(f"Sedus aug코캐 skaits: {sedus_augsa*0.75+5}")
    print(f'Planka ilgums (sekund캡s): {planks*0.75+3}')

trenet_kajas(pietupienu_skaits,vienas_kajas_pietupienu_skaits)
trenet_presiti(sedus_augsa_skaits,planka_ilgums) 

