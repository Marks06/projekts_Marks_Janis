def trenini():
    while True:
        treneties=input("Vai v캡laties redz캡t 코odienas treni켽a pl캐nu? (J/N):")
        if treneties == "J":
            treneties=1
            break
        elif treneties =="N":
            treneties=0
            break
        else:
            print("Nepareiza ievade.")
    return treneties

def treninu_izpilde():
    while True:
        izpilde = input("Vai j콞s izpild캶j캐t 코odienas treni켽u? (J/N):")
        if izpilde == "J":
            izpilde=1
            break
        elif izpilde == "N":
            izpilde = 0
            break
        else:
            print("Nepareiza ievade.")
    return izpilde
        

def galvena():
    #parbauda, vai ir jau dati, ko izmantot
    #ja ir, tad:
    trenini()
